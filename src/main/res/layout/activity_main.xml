<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!--    <ImageView-->
    <!--            android:id="@+id/pdfImage"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:background="@android:color/white"-->
    <!--            android:contentDescription="@null"-->
    <!--            android:scaleType="fitCenter" />-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="901dp"
            android:layout_height="1280dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp" android:background="#00999999" android:visibility="visible">
            <TextView
                    android:text="TextView"
                    android:layout_width="707dp"
                    android:layout_height="match_parent" android:id="@+id/fileName" android:layout_weight="1"
                    android:textSize="36sp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/pen" android:id="@+id/penButton"
                    android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/highlighter"
                    android:id="@+id/highlighterButton" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/eraser" android:id="@+id/eraserButton"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/pdfLayout"
                android:layout_width="match_parent"
                android:layout_height="1038dp"
                android:orientation="vertical"
        >
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Prev Page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/prevpage"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="6dp"
                    android:layout_height="48dp" android:id="@+id/page" android:layout_weight="1"
                    android:textSize="24sp" android:gravity="center"/>
            <Button
                    android:text="Next Page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nextpage" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>